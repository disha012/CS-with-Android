<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.example.admin.scarnedice.StartActivity"
    android:background="@drawable/icon">
    <TextView
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:ems="10"
        android:textAlignment="center"

        android:fontFamily="cursive"
        android:textSize="70dp"
        android:inputType="textPersonName"
        android:text="Scarne's Dice "
        android:textColor="@color/colorAccent" />

    <ImageButton
        android:id="@+id/Instructions"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dp"
        app:srcCompat="@drawable/instruction" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="255dp"
        android:layout_height="108dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        app:srcCompat="@drawable/instruction" />

    <ImageButton
        android:id="@+id/Play"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        app:srcCompat="@drawable/play" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="215dp"
        android:layout_height="215dp"
        android:layout_alignBottom="@+id/Instructions"
        android:layout_alignLeft="@+id/Instructions"
        android:layout_alignStart="@+id/Instructions"
        android:layout_marginBottom="71dp"
        app:srcCompat="@drawable/play" />

</RelativeLayout>